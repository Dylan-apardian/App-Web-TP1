<%- include ('../Components/head') %>
    <%- include ('../Components/header') %>

        <!-- Custom fonts for this template-->
        <link href="../Assets/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
        <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet" />

        <!-- Custom styles for this template-->
        <link href="styles/sb-admin-2.min.css" rel="stylesheet" />

        <div id="wrapper">
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">

                    <!-- Begin Page Content -->
                    <div class="container-fluid">
                        <!-- Page Heading -->
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">Actions</h1>
                        </div>

                        <!-- Content Row -->
                        <%- include ('../Components/comptes') %>

                            <!-- Content -->
                            <%- include ('../Components/AAPL') %>
                                <br>
                                <br>

                                <div class="row">
                                    <!-- Acheter actions-->
                                    <div class="col-sm">
                                        <div class="card shadow mb-4">
                                            <!-- Card Header - Dropdown -->
                                            <div
                                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                                <h6 class="m-0 font-weight-bold text-primary">
                                                    Acheter actions
                                                </h6>
                                            </div>
                                            <!-- Card Body -->
                                            <div class="card-body">
                                                <form action="/acheterActions" id="formAcheter" method="POST">
                                                    <div class="row">
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <select class="form-control" id="symboleAction"
                                                                name="symboleAction" form="formAcheter" required>
                                                                <option value="AAPL">AAPL</option>
                                                                <option value="TSLA">TSLA</option>
                                                                <option value="MFST">MFST</option>
                                                                <option value="GME">GME</option>
                                                                <option value="AMZN">AMZN</option>
                                                                <option value="FB">FB</option>
                                                                <option value="AMD">AMD</option>
                                                                <option value="INTC">INTC</option>
                                                                <option value="NFLX">NFLX</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <input type="number" class="form-control form-control-user"
                                                                id="montant" name="montant" placeholder="Montant" />
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="text-center">
                                                        <input type="submit" class="btn btn-primary btn-icon-split"
                                                            style="width: 60%; height: 36px;" value="Acheter">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Vendre actions-->
                                    <div class="col-sm">
                                        <div class="card shadow mb-4">
                                            <!-- Card Header - Dropdown -->
                                            <div
                                                class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                                <h6 class="m-0 font-weight-bold text-primary">
                                                    Vendre actions
                                                </h6>
                                            </div>
                                            <!-- Card Body -->
                                            <div class="card-body">
                                                <form action="/vendreAction" id="formVendre" method="POST">
                                                    <div class="row">
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <select class="form-control" id="symboleActionVendre"
                                                                name="symboleActionVendre" form="formVendre" required>
                                                                <option value="AAPL">AAPL</option>
                                                                <option value="TSLA">TSLA</option>
                                                                <option value="MFST">MFST</option>
                                                                <option value="GME">GME</option>
                                                                <option value="AMZN">AMZN</option>
                                                                <option value="FB">FB</option>
                                                                <option value="AMD">AMD</option>
                                                                <option value="INTC">INTC</option>
                                                                <option value="NFLX">NFLX</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                                            <input type="number" class="form-control form-control-user"
                                                                id="montantVendre" name="montantVendre"
                                                                placeholder="Montant" />
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="text-center">
                                                        <input type="submit" class="btn btn-primary btn-icon-split"
                                                            style="width: 60%; height: 36px;" value="Vendre">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm">
                                        <!-- Table de transacations recentes -->
                                        <table class="table table-bordered" id="dataTable" width="10%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>AAPL</th>
                                                    <th>TSLA</th>
                                                    <th>MFST</th>
                                                    <th>GME</th>
                                                    <th>AMZN</th>
                                                    <th>FB</th>
                                                    <th>AMD</th>
                                                    <th>INTC</th>
                                                    <th>NFLX</th>
                                                </tr>
                                            </thead>
